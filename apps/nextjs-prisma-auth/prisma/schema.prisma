generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url =  env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String  @unique
  password  String
  role      String @default("user")
  verified  Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}